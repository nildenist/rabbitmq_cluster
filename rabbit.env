# RabbitMQ and Erlang Versions
# ERLANG_VERSION=26.2
# RABBITMQ_VERSION=4.0.1
ERLANG_VERSION=24.3.4.7
RABBITMQ_VERSION=3.10.0

# Cluster Configuration
MASTER_NODE_NAME=rabbit@master-node
MASTER_IP=10.128.0.46
WORKER_1_NODE_NAME=rabbit@worker1
WORKER_1_IP=10.128.0.47
WORKER_2_NODE_NAME=rabbit@worker2
WORKER_2_IP=10.128.0.48

# Security
RABBITMQ_COOKIE="RABBITMQ_CLUSTER_COOKIE_SECRET_KEY_STRING_1234567890"
RABBITMQ_ADMIN_USER="admin"
RABBITMQ_ADMIN_PASSWORD="your-new-password"

# Network Configuration
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# System Paths
RABBITMQ_LOG_DIR=/var/log/rabbitmq
RABBITMQ_MNESIA_DIR=/var/lib/rabbitmq/mnesia

# Log Retention Management Configuration
LOG_RETENTION_DAYS=10               # Keep logs for 10 days
LOG_CLEANUP_HOUR=2                  # Run cleanup at 2 AM daily
LOG_MAX_SIZE="100"                  # Max log file size in MB
LOG_ROTATE_COUNT=5                  # Number of rotated log files to keep
LOG_COMPRESS_AFTER_DAYS=1           # Compress logs older than 1 day
LOG_CLEANUP_SCRIPT_PATH="/opt/rabbitmq/bin/cleanup_logs.sh"

# Disk Space Monitoring
DISK_USAGE_THRESHOLD=80             # Alert when disk usage > 80%
DISK_CLEANUP_THRESHOLD=85           # Force cleanup when disk usage > 85%

